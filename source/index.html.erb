      <% firebase_get.each do |value| %>
        <p><%= value  %></p>
        <% label = Date.today == Date.parse(value["date"]) ? "today" : "past" %>
        <% if label == "today" %>
          <div class="current-events">
            <%= partial "event", locals: { 
            date: value["date"],
            time: value["time"], 
            title: value["title"],
            user: value["user"],
            topic: value["topic"],
            label: label } %>
          </div>
          <br>
          <br>
        <% else  %>
          <hr>
          <br>
          <br>
          <div class="past-events">
            <%= partial "event", locals: { 
            date: value["date"],
            time: value["time"], 
            title: value["title"],
            user: value["user"],
            topic: value["topic"],
            label: label } %>
          </div>
        <% end  %>
      <% end %>
    </div>
  </div>
</div>
